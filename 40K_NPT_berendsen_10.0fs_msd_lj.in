# 0) Rename logfile
log out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/log.lammps

# 1) Initialization
units real
atom_style  atomic

# 2) Setup simulation box
boundary  p p p
read_data out/100K_NVT_berendsen_10.0fs_dt_lj/last_config.atoms

# 3) Setup atoms
mass 1 39.95

# 4) Force fields
pair_style  lj/cut 10
pair_coeff  1 1 0.2384 3.405 #ε= 0.9961 kJ/mol = 0.2384 kcal/mol, σ= 0.3405 nm = 3.405 Å

# 5) Settings
neighbor  0.5 bin #液体では0.5Å、固体では0.2Åが最適値
neigh_modify  every 1 delay 0 check yes
timestep  10.0 #fs

# 6) Operations within timestepping
# NPT ensemble
fix 1 all nve
fix 2 all temp/berendsen 40.0 40.0 $(100.0*dt) #0.1 ps = 100.0 fs thermal bath constant
fix 3 all press/berendsen iso 1.0 1.0 $(2000.0*dt) #2.0 ps = 2000.0 fs for pressure bath constant

# Compute mean squared displacement (MSD)
compute myMSD all msd

# 7) Output
thermo_style  custom step time temp press vol density ke pe etotal
thermo  10
dump  1 all xyz 100 out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/lj.xyz
dump  2 all atom 100 out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/dump.lammpstrj
dump_modify 1 sort id element Ar


# 7) Output
thermo_style  custom step time temp press vol density ke pe etotal
thermo  10
dump  1 all xyz 100 out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/lj.xyz
dump 2 all custom 100 out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/dump.lammpstrj id element xs ys zs
dump_modify 1 sort id element Ar
dump_modify 2 element Ar # dump 2 で原子タイプ1を 'Ar' として出力するように設定


# Print MSD to a separate file
fix MSDOut all ave/time 100 10 1000 c_myMSD[1] c_myMSD[2] c_myMSD[3] c_myMSD[4] file out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/msd.txt mode scalar

# 8) Actions
run 1000000 #steps
write_data out/40K_1atm_NPT_berendsen_10.0fs_msd_lj/last_config.atoms nocoeff
